{% extends 'admin/base.html.twig' %}

{% block body %}



    <div class="container mt-5 d-flex justify-content-center">
        <div class="form-container p-4 shadow-sm rounded" style="max-width: 600px; width: 100%;">

            <h2 style="text-align: center">Modification d'un artiste</h2>

            {{ form_start(adminStyleFormView) }}

            <div class="mb-3">
                {{ form_label(adminStyleFormView.name, null, {'label_attr': {'class': 'form-label'}}) }}
                {{ form_widget(adminStyleFormView.name, {'attr': {'class': 'form-control'}}) }}
                {{ form_errors(adminStyleFormView.name) }}
            </div>

            <div class="d-flex justify-content-center">
                {{ form_widget(adminStyleFormView.Valider, {'attr': {'class': 'btn btn-primary'}}) }}
            </div>

            {{ form_end(adminStyleFormView) }}

        </div>
    </div>
{% endblock body %}