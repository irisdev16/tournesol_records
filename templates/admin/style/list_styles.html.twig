{% extends 'admin/base.html.twig' %}
{% block body %}
    <div class="container mt-5">
        <h1>Liste de tous les artistes</h1>

            <div class="d-flex justify-content-center">
                <table class="table table-bordered text-center">
                    <tr>
                        <th style="border: 1px solid black; padding: 8px;">Actions</th>
                        <th style="border: 1px solid black; padding: 8px;">Style id</th>
                        <th style="border: 1px solid black; padding: 8px;">Nom du style</th>
                        <th style="border: 1px solid black; padding: 8px;">Date de création</th>
                        <th style="border: 1px solid black; padding: 8px;">Date de mise à jour</th>
                    </tr>

                    {% for style in styles %}
                        <tr>
                             <td style="border: 1px solid black; padding: 8px;">
                                <a href="{{ path('admin_show_style', {'id': style.id}) }}" class="btn btn-primary" style="margin-bottom: 10px" >Voir le style</a>
                                <a href="{{ path('admin_delete_style', {'id': style.id}) }}" class="btn btn-danger" style="margin-bottom: 10px"  >Supprimer</a>
                                <a href="{{ path('admin_update_style', {'id': style.id}) }}" class="btn btn-warning" >Modifier</a>
                            </td>
                            <td style="border: 1px solid black; padding: 8px;">{{ style.id }}</td>
                            <td style="border: 1px solid black; padding: 8px;">{{ style.name }}</td>
                            <td style="border: 1px solid black; padding: 8px;">{{ style.createdAt | date('d-m-Y')}}</td>
                            <td style="border: 1px solid black; padding: 8px;">{{ style.updatedAt | date('d-m-Y')}}</td>
                        </tr>
                    {% endfor %}
                </table>
            </div>

    </div>
{% endblock body %}