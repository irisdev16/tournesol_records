{% extends 'admin/base.html.twig' %}

{% block body %}

    <div class="container mt-5 d-flex justify-content-center">
        <div class="form-container p-4 shadow-sm rounded" style="max-width: 600px; width: 100%;">

            {{ form_start(adminArtistFormView) }}

            <div class="mb-3">
                {{ form_label(adminArtistFormView.alias, null, {'label_attr': {'class': 'form-label'}}) }}
                {{ form_widget(adminArtistFormView.alias, {'attr': {'class': 'form-control'}}) }}
                <div class="form_error">
                    {{ form_errors(adminArtistFormView.alias) }}
                </div>
            </div>

            <div class="mb-3">
                {{ form_label(adminArtistFormView.description, null, {'label_attr': {'class': 'form-label'}}) }}
                {{ form_widget(adminArtistFormView.description, {'attr': {'class': 'form-control'}}) }}
                <div class="form_error">
                    {{ form_errors(adminArtistFormView.description) }}
                </div>
            </div>

            <div class="mb-3">
                {{ form_label(adminArtistFormView.image, null, {'label_attr': {'class': 'form-label'}}) }}
                {{ form_widget(adminArtistFormView.image, {'attr': {'class': 'form-control'}}) }}

            </div>

            <div class="mb-3">
                {{ form_label(adminArtistFormView.firstname, null, {'label_attr': {'class': 'form-label'}}) }}
                {{ form_widget(adminArtistFormView.firstname, {'attr': {'class': 'form-control'}}) }}

            </div>

            <div class="mb-3">
                {{ form_label(adminArtistFormView.name, null, {'label_attr': {'class': 'form-label'}}) }}
                {{ form_widget(adminArtistFormView.name, {'attr': {'class': 'form-control'}}) }}

            </div>

            <div class="mb-3">
                {{ form_label(adminArtistFormView.email, null, {'label_attr': {'class': 'form-label'}}) }}
                {{ form_widget(adminArtistFormView.email, {'attr': {'class': 'form-control'}}) }}
                <div class="form_error">
                    {{ form_errors(adminArtistFormView.email) }}
                </div>
            </div>

            <div class="mb-3">
                {{ form_label(adminArtistFormView.address, null, {'label_attr': {'class': 'form-label'}}) }}
                {{ form_widget(adminArtistFormView.address, {'attr': {'class': 'form-control'}}) }}
                <div class="form_error">
                    {{ form_errors(adminArtistFormView.address) }}
                </div>
            </div>

            <div class="d-flex justify-content-center">
                {{ form_widget(adminArtistFormView.Valider, {'attr': {'class': 'btn btn-primary'}}) }}
            </div>

            {{ form_end(adminArtistFormView) }}

        </div>
    </div>

{% endblock body %}
