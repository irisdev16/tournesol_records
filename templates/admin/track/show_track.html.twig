{% extends 'admin/base.html.twig' %}



{% block body %}

    <section class="container my-5">
        <div class="d-flex justify-content-center">


                <div class="col-md-3">
                    <p><strong>track_id :</strong> {{ track.id }}</p>
                    <p><strong>Nom de la track :</strong> {{ track.title }}</p>
                    <p><strong>Description :</strong> {{ track.description }}</p>

                    {% if track.style is not empty %}
                        {% for style in track.style %}
                            <p><strong>Style :</strong> {{ style.name }}{% if not loop.last %}, {% endif %}</p>
                        {% endfor %}
                    {% else %}
                        Aucun style
                    {% endif %}

                    <p><strong>Artiste : </strong>{{ track.artiste.alias }}</p>
                    <p><strong>Date de sortie : </strong>{{ track.releasedAt | date('d-m-Y') }}</p>
                    <p><strong>Lien Spotify : </strong>{{ track.spotifyLink }}</p>
                    <p><strong>Lien Apple Music : </strong>{{ track.appleMusicLink }}</p>
                    <p><strong>Lien Youtube : </strong>{{ track.youtubeLink }}</p>
                    <p><strong>Date de cr√©ation :</strong> {{ track.createdAt | date('d-m-Y') }}</p>
                    <p><strong>Date de modification :</strong> {{ track.updatedAt | date('d-m-Y') }}</p>


                </div>
        </div>
    </section>




{% endblock body %}