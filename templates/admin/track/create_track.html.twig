{% extends 'admin/base.html.twig' %}

{% block body %}

    <div class="container mt-5 d-flex justify-content-center">
        <div class="form-container p-4 shadow-sm rounded" style="max-width: 600px; width: 100%;">

            {{ form_start(adminTrackForm) }}

            <div class="mb-3">
                {{ form_label(adminTrackForm.title, null, {'label_attr': {'class': 'form-label'}}) }}
                {{ form_widget(adminTrackForm.title, {'attr': {'class': 'form-control'}}) }}
                {{ form_errors(adminTrackForm.title) }}
            </div>

            <div class="mb-3">
                {{ form_label(adminTrackForm.description, null, {'label_attr': {'class': 'form-label'}}) }}
                {{ form_widget(adminTrackForm.description, {'attr': {'class': 'form-control'}}) }}
            </div>

            <div class="mb-3">
                {{ form_label(adminTrackForm.image, null, {'label_attr': {'class': 'form-label'}}) }}
                {{ form_widget(adminTrackForm.image, {'attr': {'class': 'form-control'}}) }}
            </div>

            <div class="mb-3">
                {{ form_label(adminTrackForm.style, null, {'label_attr': {'class': 'form-label'}}) }}
                {{ form_widget(adminTrackForm.style, {'attr': {'class': 'form-control'}}) }}
                {{ form_errors(adminTrackForm.style) }}
            </div>

            <div class="mb-3">
                {{ form_label(adminTrackForm.artiste, null, {'label_attr': {'class': 'form-label'}}) }}
                {{ form_widget(adminTrackForm.artiste, {'attr': {'class': 'form-control'}}) }}
                {{ form_errors(adminTrackForm.artiste) }}
            </div>

            <div class="mb-3">
                {{ form_label(adminTrackForm.releasedAt, null, {'label_attr': {'class': 'form-label'}}) }}
                {{ form_widget(adminTrackForm.releasedAt, {'attr': {'class': 'form-control'}}) }}
                {{ form_errors(adminTrackForm.releasedAt) }}
            </div>

            <div class="mb-3">
                {{ form_label(adminTrackForm.spotifyLink, null, {'label_attr': {'class': 'form-label'}}) }}
                {{ form_widget(adminTrackForm.spotifyLink, {'attr': {'class': 'form-control'}}) }}
                {{ form_errors(adminTrackForm.spotifyLink) }}
            </div>

            <div class="mb-3">
                {{ form_label(adminTrackForm.appleMusicLink, null, {'label_attr': {'class': 'form-label'}}) }}
                {{ form_widget(adminTrackForm.appleMusicLink, {'attr': {'class': 'form-control'}}) }}
                {{ form_errors(adminTrackForm.appleMusicLink) }}
            </div>

            <div class="mb-3">
                {{ form_label(adminTrackForm.youtubeLink, null, {'label_attr': {'class': 'form-label'}}) }}
                {{ form_widget(adminTrackForm.youtubeLink, {'attr': {'class': 'form-control'}}) }}
                {{ form_errors(adminTrackForm.youtubeLink) }}
            </div>


            <div class="d-flex justify-content-center">
                {{ form_widget(adminTrackForm.Valider, {'attr': {'class': 'btn btn-primary'}}) }}
            </div>

            {{ form_end(adminTrackForm) }}

        </div>
    </div>

{% endblock body %}
