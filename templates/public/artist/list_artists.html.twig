{% extends "public/base.html.twig" %}
{% block title %}Accueil | Les artistes {% endblock %}

{% block body %}
    <main>
        {# FORMULAIRE : BARRE DE RECHERCHES #}

        <form class="form-search" method="get" action="{{ path('search_artists') }}">
            <label>
                <input required class="search-input" type="text" name="search" >
            </label>

            <input class="search-button" type="submit" value="Rechercher un artiste">
        </form>

        {# BOUCLE POUR AFFICHER LISTE D'ARTISTES #}

        <h1 id="h1artistes" style="text-align: center;color: #fea756; font-size: 60px">ARTISTES</h1>

        {% for artist in artists %}
            <article class="all-artiste">
                <div class="artist-text">
                    <h3>{{ artist.alias }}</h3><br>
                    <p>{{ artist.description }}</p>
                    <a href="{{ path('show_artist', {id: artist.id}) }}">Voir plus</a>
                </div>

                <div class="artist-img">
                    <img id="radius" src="{{ asset('assets/uploads/' ~ artist.image) }}" alt="{{ artist.alias }}" />
                </div>
            </article>
        {% endfor %}
    </main>
{% endblock %}