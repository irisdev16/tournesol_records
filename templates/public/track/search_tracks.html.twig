{% extends "public/base.html.twig" %}


{% block title %}Recherche pour {{ search }} | Tournesol Records{% endblock %}

{% block body %}

    <main>

        {% if tracks | length == 0 %}
            <p>Pas de r√©sultats pour cette recherche</p>
        {% endif %}

        {% for track in tracks %}

            <article class="search-track">
                <p class="titre-track">{{ track.title }}</p>
                <div class="img-track">
                    <img src="{{ asset('assets/uploads/' ~ track.image) }}"/>
                </div>
                <p class="text-track">{{ track.description }}</p>

            </article>
        {% endfor %}
    </main>

{% endblock %}