{% extends "public/base.html.twig" %}

{% block body %}

    <h1 style="text-align: center; margin-top: 5%; color: #fea756">Formulaire de contact</h1>

    <div class="container mt-5 d-flex justify-content-center" style="margin-top: 5%">
        <div class="form-container p-4 shadow-sm rounded" style="max-width: 600px; width: 100%;">

            {{ form_start(publicContactFormView) }}


            <div class="mb-3">
                {{ form_label(publicContactFormView.email, null, {'label_attr': {'class': 'form-label'}}) }}
                {{ form_widget(publicContactFormView.email, {'attr': {'class': 'form-control'}}) }}

            </div>

            <div class="mb-3">
                {{ form_label(publicContactFormView.lastname, null, {'label_attr': {'class': 'form-label'}}) }}
                {{ form_widget(publicContactFormView.lastname, {'attr': {'class': 'form-control'}}) }}

            </div>

            <div class="mb-3">
                {{ form_label(publicContactFormView.firstname, null, {'label_attr': {'class': 'form-label'}}) }}
                {{ form_widget(publicContactFormView.firstname, {'attr': {'class': 'form-control'}}) }}

            </div>

            <div class="mb-3">
                {{ form_label(publicContactFormView.objet, null, {'label_attr': {'class': 'form-label'}}) }}
                {{ form_widget(publicContactFormView.objet, {'attr': {'class': 'form-control'}}) }}

            </div>

            <div class="mb-3">
                {{ form_label(publicContactFormView.message, null, {'label_attr': {'class': 'form-label'}}) }}
                {{ form_widget(publicContactFormView.message, {'attr': {'class': 'form-control'}}) }}

            </div>

            <div class="d-flex justify-content-center">
                {{ form_widget(publicContactFormView.Envoyer, {'attr': {'class': 'btn btn-secondary'}}) }}
            </div>

            {{ form_end(publicContactFormView) }}
        </div>
    </div>
{% endblock body %}
